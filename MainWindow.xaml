<Window x:Class="PracticLatypov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticLatypov"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="1000" MinHeight="630" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="261*"/>
        </Grid.RowDefinitions>


        <Image Source="/Resources/Logo.png"  />
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Width="100" Margin="5 0"  Height="35" x:Name="BackBtn" Click="BackBtn_Click">Назад</Button>
            <Button Width="100"  Margin="15 0"  Height="35" x:Name="ExitBtn" Click="ExitBtn_Click">Выход</Button>
        </StackPanel>

        <Button Width="150" Height="35" HorizontalAlignment="Left" Margin="15 0" x:Name="QRBtn" Click="QRBtn_Click">О приложении</Button>
        
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" ></Frame>
    </Grid>
</Window>
